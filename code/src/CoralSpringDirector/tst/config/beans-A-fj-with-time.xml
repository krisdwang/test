<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="tally" class="com.amazon.coral.tally.Tally" />
    
    <bean id="workerA" class="com.amazon.coral.spring.director.test.sample.WorkerA">
        <constructor-arg ref="tally" />
        <property name="iterations" value="3" />
        <property name="sleep" value="100" />
    </bean>
    <bean id="workerB" class="com.amazon.coral.spring.director.test.sample.WorkerB">
        <constructor-arg ref="tally" />
        <property name="iterations" value="6" />
        <property name="sleep" value="100" />
    </bean>
    <bean id="listener" class="com.amazon.coral.spring.director.test.sample.ListenerLoggerPlus">
        <constructor-arg ref="tally" />
    </bean>
    
    <bean id="plan" class="com.amazon.coral.spring.director.Plan">
        <property name="phase" value="100" />
  
        <property name="startup">
            <list>
                <bean class="com.amazon.coral.spring.director.fj.ForkJoin">
                    <property name="listener" ref="listener" />
                    <property name="tick" value="100" />
                    <property name="event" value="acquire" />
                    <property name="targets" value="#{{@workerA,@workerB}}"/>
                </bean>
            </list>
        </property>
        <property name="shutdown">
            <list>
                <bean class="com.amazon.coral.spring.director.fj.ForkJoin">
                    <property name="listener" ref="listener" />
                    <property name="event" value="release" />
                    <property name="targets" value="#{{@workerA,@workerB}}"/>
                </bean>
            </list>
        </property>
    </bean>
    
</beans>