<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="workerA" class="com.amazon.coral.spring.director.test.sample.WorkerA" />
    <bean id="workerB" class="com.amazon.coral.spring.director.test.sample.WorkerB" />

    <bean id="bobcatA" class="com.amazon.coral.spring.director.test.sample.BobcatMockup">
        <property name="config" value="A" />
        <property name="mode" value="passive" />
    </bean>
    <bean id="bobcatB" class="com.amazon.coral.spring.director.test.sample.BobcatMockup">
        <property name="config" value="B" />
        <property name="mode" value="passive" />
    </bean>
    
    <bean id="aBobcatA"  class="com.amazon.coral.spring.director.test.sample.BobcatLiveAdapterMockup">
        <property name="target" ref="bobcatA" />
    </bean>
    <bean id="aBobcatB"  class="com.amazon.coral.spring.director.test.sample.BobcatLiveAdapterMockup">
        <property name="target" ref="bobcatB" />
    </bean>
    
    <bean id="plan" class="com.amazon.coral.spring.director.Plan">
        <property name="phase" value="100" />
 
        <property name="startup">
            <list>
                <bean class="com.amazon.coral.spring.director.Phase">
                    <property name="events" value="acquire" />
                    <property name="targets" value="#{{@workerA,@workerB,@aBobcatA,@aBobcatB}}"/>
                </bean>
                <bean class="com.amazon.coral.spring.director.Phase">
                    <property name="events" value="activate" />
                    <property name="targets" value="#{{@workerA,@workerB}}"/>
                </bean>                
                <bean class="com.amazon.coral.spring.director.Phase">
                    <property name="events" value="activate" />
                    <property name="targets" value="#{{@aBobcatA,@aBobcatB}}"/>
                </bean>                
            </list>
        </property>
        <property name="shutdown">
            <list>
                <bean class="com.amazon.coral.spring.director.Phase">
                    <property name="events" value="deactivate,release" />
                    <property name="targets" value="#{{@aBobcatA,@aBobcatB}}"/>
                </bean>
                <bean class="com.amazon.coral.spring.director.Phase">
                    <property name="events" value="deactivate,release" />
                    <property name="targets" value="#{{@workerA,@workerB}}"/>
                </bean>
            </list>
        </property>
    </bean>
</beans>